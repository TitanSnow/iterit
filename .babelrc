{
    "presets": [
        ["@babel/preset-env", {
            "targets": {
                "esmodules": true
            },
            "modules": false
        }]
    ],
    "plugins": [
        "@babel/plugin-proposal-function-bind",
        "@babel/plugin-proposal-nullish-coalescing-operator",
        "@babel/plugin-proposal-optional-catch-binding"
    ],
    "env": {
        "jest": {
            "presets": [
                ["@babel/preset-env", {
                    "targets": {
                        "node": "current"
                    },
                    "modules": "commonjs"
                }]
            ]
        }
    }
}
